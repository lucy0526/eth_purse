<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:background="#ffff"
    android:orientation="vertical">

    <!-- <android.support.v7.widget.RecyclerView
         android:id="@+id/account_rcv"
         android:layout_weight="5"
         android:layout_width="match_parent"
         android:layout_height="0dp">
     </android.support.v7.widget.RecyclerView>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/account_radius"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/account_image_imv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/account_image_radius"
            android:src="@mipmap/color_staro" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/address_hexString_tvw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="GEN-WALLET"
                android:textColor="#ffff"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/account_name_tvw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:ellipsize="middle"
                    android:maxEms="11"
                    android:maxLines="1"
                    android:textColor="#ffff" />

                <ImageView
                    android:id="@+id/cope_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:src="@mipmap/copyo" />
            </LinearLayout>
        </LinearLayout>


        <ImageView
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="5dp"
            android:src="@mipmap/more" />

        <!--<TextView
            android:id="@+id/account_money_tvw"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="right" />-->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:text="资产"
                android:textColor="#080808"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/transaction_imb"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#ffff"
                android:src="@mipmap/add_small" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="58dp"
                android:layout_height="26dp"
                android:layout_gravity="center"
                android:layout_weight="0.02"
                app:srcCompat="@mipmap/money" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:text="GRN"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="0￥" />

        </LinearLayout>

    </LinearLayout>

    <!--  <LinearLayout
          android:orientation="vertical"
          android:layout_weight="1"
          android:layout_width="match_parent"
          android:layout_height="0dp">
          <LinearLayout
              android:layout_weight="1"
              android:layout_width="match_parent"
              android:layout_height="0dp">
              <ImageButton
                  android:layout_width="0dp"
                  android:layout_height="10dp" />
          </LinearLayout>
      </LinearLayout>-->

</LinearLayout>
