<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_width="match_parent">
    <TextView
        android:background="@drawable/top_radius"
        android:textColor="#ffff"
        android:textSize="12pt"
        android:gravity="center"
        android:text="创建你的  gen用户身份"
        android:layout_weight="0.75"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <TextView
        android:id="@+id/session_create_user"
        android:layout_marginTop="40dp"
        android:background="@drawable/register_radius"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:text="创建身份"
        android:textColor="#ffff"
        android:textSize="18dp"
        android:gravity="center"
        android:layout_height="50dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <TextView
        android:layout_marginTop="20dp"
        android:background="@drawable/login_radius"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:text="恢复身份"
        android:textColor="#89b8f9"
        android:textSize="18dp"
        android:gravity="center"
        android:layout_height="50dp" />

    <TextView
        android:textSize="12dp"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:layout_weight="0.10"
        android:layout_width="match_parent"
        android:text="想了解gen的更多信息?"
        android:layout_height="0dp" />
    <TextView
        android:id="@+id/enter_gen_web_tvw"
        android:textSize="12dp"
        android:layout_gravity="center"
        android:textColor="#89b8f9"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:text="进入gen官网"
        android:layout_height="20dp" />
    <TextView
        android:textSize="12dp"
        android:gravity="center_horizontal"
        android:textColor="#89b8f9"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="10dp" />
</LinearLayout>
